    padding: 0.5rem 1.5rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .plan-header h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 1rem;
  }

  .price {
    margin-bottom: 1rem;
  }

  .amount {
    font-size: 3rem;
    font-weight: bold;
    color: #1e293b;
  }

  .period {
    font-size: 1rem;
    color: #64748b;
  }

  .description {
    color: #64748b;
    margin-bottom: 2rem;
    font-size: 0.9rem;
  }

  .features-list {
