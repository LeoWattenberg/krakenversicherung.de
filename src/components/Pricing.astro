  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
    border-color: #3b82f6;
  }

  .btn-primary:hover {
    background-color: #2563eb;
    border-color: #2563eb;
  }

  .btn-secondary {
    background-color: transparent;
    color: #3b82f6;
    border-color: #3b82f6;
  }

  .btn-secondary:hover {
    background-color: #3b82f6;
    color: white;
  }

  @media (max-width: 768px) {
