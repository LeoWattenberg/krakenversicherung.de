    border-bottom: 1px solid #f1f5f9;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .features-list li:last-child {
    border-bottom: none;
  }

  .checkmark {
    color: #10b981;
    font-weight: bold;
    flex-shrink: 0;
  }

  .btn {
